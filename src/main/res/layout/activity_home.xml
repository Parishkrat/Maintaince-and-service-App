<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F673AB7"
    android:gravity="center"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Services"
        android:textColor="#654321"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/edit"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cleaning"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="35dp"
                    android:background="@drawable/edit"
                    android:foregroundTint="#151111"
                    android:padding="15dp"
                    app:srcCompat="@drawable/cleaning" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cleaning"
                    android:textSize="24sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hardware"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@drawable/edit"
                    android:foregroundTint="#151111"
                    android:padding="15dp"
                    app:srcCompat="@drawable/hardware" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Hardware"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/electrical"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/edit"
                    android:foregroundTint="#151111"
                    android:padding="15dp"
                    app:srcCompat="@drawable/electrical" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Electrical"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/softwaredeveloper"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="35dp"
                    android:background="@drawable/edit"
                    android:foregroundTint="#151111"
                    android:padding="15dp"
                    app:srcCompat="@drawable/softwaredeveloper" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Software"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>